{
    "author": "Jakobg1215",
    "description": "A Minecraft Java server writen in TypeScript.",
    "devDependencies": {
        "@types/node": "^16.7.10",
        "concurrently": "^6.2.1",
        "import-sort-style-module": "^6.0.0",
        "nodemon": "^2.0.12",
        "prettier": "^2.3.2",
        "prettier-plugin-import-sort": "^0.0.7",
        "typescript": "^4.4.2"
    },
    "engines": {
        "node": ">=10"
    },
    "importSort": {
        ".ts": {
            "style": "module",
            "parser": "typescript"
        }
    },
    "license": "MIT",
    "main": "dist/server",
    "name": "barrierts",
    "private": true,
    "scripts": {
        "build": "tsc",
        "dev": "concurrently -k -i \"tsc -w\" \"nodemon --delay 5 dist/server\"",
        "prettier": "prettier src --config .prettierrc --write",
        "start": "node dist/server --unhandled-rejections=strict"
    },
    "version": "1.0.0"
}